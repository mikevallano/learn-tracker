<p id="notice"><%= notice %></p>

<h1>Listing Learnings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @learnings.each do |learning| %>
      <tr>
        <td><%= learning.title %></td>
        <td><%= learning.description %></td>
        <td><%= link_to 'Show', learning, class: 'btn btn-sm btn-success' %></td>
        <td><%= link_to 'Edit', edit_learning_path(learning), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', learning, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Learning', new_learning_path, class: 'btn btn-md btn-primary' %>
